<div class="container-fluid" ng-controller="SystemInfo">
  <tabset>
    <tab heading="系统概要" select="overview.show()">
      <div class="row row-in-tab">
        <div class="col-sm-7">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">主机信息</h3>
            </div>
            <div class="panel-body">
              <form class="form-horizontal" role="form">
                <div class="form-group">
                  <label class="col-sm-3 control-label">主机名</label>
                  <div class="col-sm-7">
                    <input type="text" class="form-control" ng-model="localhost.hostname" />
                  </div>
                  <div class="col-sm-2">
                    <button type="button" class="btn btn-default" ng-click="overview.saveHostname">保存</button>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-3 control-label">操作系统</label>
                  <div class="col-sm-9">
                    <p class="form-control-static">{{localhost.system}}({{localhost.dist_name}}&nbsp;{{localhost.dist_version}})</p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-3 control-label">设备架构</label>
                  <div class="col-sm-9">
                    <p class="form-control-static">{{localhost.machine}}</p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-3 control-label">系统内核</label>
                  <div class="col-sm-9">
                    <p class="form-control-static">{{localhost.release}}</p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-3 control-label">Storlever</label>
                  <div class="col-sm-9">
                    <p class="form-control-static">{{localhost.version}}</p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-3 control-label">运行时间</label>
                  <div class="col-sm-9">
                    <p class="form-control-static">{{localhost.uptime}}</p>
                  </div>
                </div>
                 <div class="form-group">
                  <label class="col-sm-3 control-label">Load average</label>
                  <div class="col-sm-9">
                    <p class="form-control-static">{{localhost.loadavg[0]|number:2}}&nbsp;&nbsp;{{localhost.loadavg[1]|number:2}}&nbsp;&nbsp;{{localhost.loadavg[2]|number:2}}</p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-3 control-label">Dist ID</label>
                  <div class="col-sm-9">
                    <p class="form-control-static">{{localhost.dist_id}}</p>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="col-sm-5">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">CPU信息</h3>
            </div>
            <div class="panel-body">
              <form class="form-horizontal" role="form">
                <div class="form-group">
                  <label class="col-sm-4 control-label">cache_size</label>
                  <div class="col-sm-8">
                    <p class="form-control-static">{{cpulist[0].cache_size}}</p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4 control-label">cpu_MHz</label>
                  <div class="col-sm-8">
                    <p class="form-control-static">{{cpulist[0].cpu_MHz}}</p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4 control-label">processor</label>
                  <div class="col-sm-8">
                    <p class="form-control-static">{{cpulist[0].processor}}</p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4 control-label">model_name</label>
                  <div class="col-sm-12">
                    <p class="form-control-static">{{cpulist[0].model_name}}</p>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <div class="panel panel-default">
            <!-- <div class="panel-heading">
              <h3 class="panel-title">SELinux</h3>
            </div> -->
            <div class="panel-body">
              <form class="form-horizontal" role="form">
                <div class="form-group">
                  <label class="col-sm-4 control-label">SELinux状态</label>
                  <div class="col-sm-4">
                    <p class="form-control-static">{{selinux.state}}</p>
                  </div>
                  <div class="col-sm-4">
                    <button type="button" class="btn btn-default" ng-click="setSELinuxState('enforcing')" ng-show="enforcing !== selinux.state">开启</button>
                    <button type="button" class="btn btn-default" ng-click="setSELinuxState('disabled')" ng-show="enforcing === selinux.state">关闭</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row row-in-tab">
        <div class="col-sm-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">CPU利用率</h3>
            </div>
            <div class="panel-body">
              <div class="container-fluid">
                <canvas id="cpu-line" class="chart chart-line canvas-default" data="overview.cpu.data" labels="overview.cpu.labels" series="overview.cpu.series" options="overview.cpu.options" height="100"></canvas> 
              </div>
            </div>
          </div>
        </div>
        <!--<div class="col-sm-2">-->
        <!--  <div class="panel panel-default">-->
        <!--    <div class="panel-heading">-->
        <!--      <h3 class="panel-title">CPU利用率</h3>-->
        <!--    </div>-->
        <!--    <div class="panel-body">-->
        <!--      <div class="container-fluid">-->
        <!--        <canvas id="cpu-line" class="chart chart-line canvas-default" data="overview.cpu.data" labels="overview.cpu.labels" series="overview.cpu.series" options="overview.cpu.options"></canvas> -->
        <!--      </div>-->
        <!--    </div>-->
        <!--  </div>-->
        <!--</div>-->
        <div class="col-sm-12">
          <div class="panel panel-default">
            <div class="panel-heading btn-in-left">
              <h3 class="panel-title">内存信息</h3>
              <div class="btn-right-container"><button type="button" class="btn btn-default btn-sm" ng-click="overview.releaseMemory">一键加速</button></div>
            </div>
            <div class="panel-body">
              <div class="container-fluid">
                <div class="row">
                  <div class="col-sm-6">
                    <canvas id="memory-pie" class="chart chart-pie" data="overview.memory.data" labels="overview.memory.labels" options="overview.memory.options" height="200"></canvas> 
                  </div>
                  <div class="col-sm-6">
                    <dl class="dl-horizontal chart-legend">
                      <dt><span class="legend-color1"></span>已使用</dt>
                      <dd>{{overview.memory.data[0]}}%</dd>
                      <dt><span class="legend-color2"></span>可用</dt>
                      <dd>{{overview.memory.data[1]}}%</dd>
                      <dt class="divider"></dt>
                      <dd></dd>
                      <dt>内存总量</dt>
                      <dd>{{overview.memory.detail.total|KB:2}}</dd>
                      <dt>已使用总量</dt>
                      <dd>{{overview.memory.detail.used|KB:2}}MB</dd>
                      <dt>可用总量</dt>
                      <dd>{{overview.memory.detail.available|KB:2}}</dd>
                      <dt>空闲</dt>
                      <dd>{{overview.memory.detail.free|KB:2}}</dd>
                      <dt>内核缓存</dt>
                      <dd>{{overview.memory.detail.cached|KB:2}}</dd>
                      <dt>缓冲区</dt>
                      <dd>{{overview.memory.detail.buffers|KB:2}}</dd>
                    </dl>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </tab>
    <tab heading="系统配置" select="config.show()">
      <div class="row row-in-tab">
        <div class="col-sm-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">时间配置</h3>
            </div>
            <div class="panel-body">
              <form role="form">
                <div class="form-group">
                  <label  class="control-label">时区</label>
                  <select class="form-control" ng-model="config.datetime.zone" >
